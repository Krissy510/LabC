#Q3
#include <stdio.h>

int main(){
    float income;
    printf("Your income: ");
    scanf("%f",&income);
    if (income <= 150000){
        printf("tax = %.2f",0);
    }
    else if(income > 150000 && income<= 5000000){
        printf("tax = %.2f",((income-150000.0)*0.1));
    }
    else if(income > 500000 && income<= 10000000){
        printf("tax = %.2f",(((income-500000.0)*0.2)+35000));
    }
    else if(income > 1000000 && income<= 40000000){
        printf("tax = %.2f",(((income-1000000.0)*0.3)+135000));
    }
    else if(income > 4000000){
        printf("tax = %.2f",(((income-4000000.0)*0.37)+1035000));
    } else{
        printf("Invalid income!");
    }
}

#Q4

#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main(){
    float a,b,c,x1,x2;
    printf("Enter the values here: ");
    scanf("%f %f %f",&a,&b,&c);
    if(a == 0.0){
        printf("Invalid: a = 0");
        exit(0);
    }
    if (((pow(b,2.0))-(4.0*a*c))< 0){
        printf("Invalid: b^2 â€“ 4*a*c <0");
        exit(0);
    }
    x1 = ((-b) + sqrt((pow(b,2.0))-(4.0*a*c)))/(2.0*a);
    x2 = ((-b) - sqrt((pow(b,2.0))-(4.0*a*c)))/(2.0*a);
    printf("x1 = %.1f\nx2 = %.1f",x1,x2);
}

#Q5

#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main(){
    float a,b,c,area,s;
    printf("Enter the values here: ");
    scanf("%f %f %f",&a,&b,&c);
    if ((a+b) < c){
        printf("Invalid: This is not a triangle.");
        exit(0);
    }
    s = ((a+b+c)/2.0);
    area = sqrt(s*(s-a)*(s-b)*(s-c));
    if(((pow(a,2.0)) + (pow(b,2.0))) == pow(c,2.0)){
        printf("Side a = %.1f\nSide b = %.1f\nSide c = %.1f\nArea = %.3f\nThis is a triangle.",a,b,c,area);
    }
    else{
        printf("Side a = %.1f\nSide b = %.1f\nSide c = %.1f\nArea = %.3f\nThis is not a triangle.",a,b,c,area);
    }
}

#Q6

#include <stdio.h>

int main(){
    float x,y;
    printf("Enter the values here: ");
    scanf("%f %f",&x,&y);
    if((x >= 0 && x<=200) && (y >= 0 && y<=100)){
        printf("Inside");
    } else{
        printf("Outside");
    }

}
