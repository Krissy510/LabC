// Q2.1
#define _CRT_SECURE_NO_WARNINGS
// for visual studio only
#include<stdio.h>
// function protype
int check(int); // find prime
void showPrime(int); // showb prime
// main function
int main() 
{
	showPrime(20);
	return 0;
}

void showPrime(int n) {
	if (n >= 2 && n <= 1000) {
		for (int num = 2; num <= n; num++) {
			if (num == 2) {
				printf("%d", num);
				continue;
			}
			if (check(num) == 1) {
				printf(", %d", num);
			}
		}
	}
	else
		printf("Invalid value!");
}

int check(int n) {  // find prime
	if (n % 2 == 0) {
		return 0;
	}
	else
	{
		for (int find = 2; find <= n / 2; find++) {
			if (n % find == 0) {
				return 0;
			}
		}
		return 1;
	}
}


// Q3
#define _CRT_SECURE_NO_WARNINGS
// for visual studio only
#include<stdio.h>
// function protype
int gcd(int, int);
// main function
int main() 
{
	int val1 = 80844, val2 = 25320;
	printf("The GCD of %d and %d is %d",val1,val2,gcd(val1,val2));
	return 0;
}

int gcd(int val1, int val2) {
	int remainder = 1;
	while (remainder != 0)
	{
		if (val1 % val2 == 0) {
			return val2;
		}
		else
		{
			remainder = val1 % val2;
			val1 = val2;
			val2 = remainder;
		}
	}
}

// Q4
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    srand(time(NULL)); //A function that returns the current time of the computer
    int ran_number, guessed_num;
    char temp, ty;
    while (1) {
        system("cls");
        ran_number = (rand() % 100 + 1);
        printf("Ans = %d\n", ran_number);
        int check = 0, guess = 7;
        for (; guess >= 1; guess--) {
            printf("Enter  your number here:");
            scanf("%d", &guessed_num);
            if (guessed_num == ran_number) {
                printf("\nHooray, you hav won!\n");
                break;
            }
            else
            {
                printf("Wrong Number, Try agian!\n");
                if (guessed_num > ran_number)
                    printf("Too high\n");
                else if (guessed_num < ran_number)
                    printf("Too low\n");
            }
        }
        printf("Would you like to play again (y/n)?\n");
        scanf("%c%c",&temp,&ty);
        if (ty == 'n')
            break;
        else if (ty == 'y')
            continue;
        else {
            printf("Invalid Input!");
            break;
        }
    }
    return 0;
}	

// Q5
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int ra[6],ra_num,count = 0 ,check1= 0,check2 = 0;
    srand(time(NULL)); //A function that returns the current time of the computer
    for(int add = 0; add < 6; add++){
        ra[add] = (rand()%52+1);
    }
    while (1){
        ra_num = (rand()%52+1);
        for(check1 = 0; check1 < 6; check1++){
            if (ra_num == ra[check1]){
                check2 = 1;
                break;
            }
        }
        if (check2 != 1){
            count += 2;
        }
        else if (check2 == 1){
            printf("The monkey typed %d letters",count);
            break;
        }
    }
    return 0;
}

//Q5 v.2
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int ra[6][2] = { {1,20},{9,19},{8,5},{23,5},{21,16},{15, 14}}, ra_num1,ra_num2, count = 0, check1, check2;
    srand(time(NULL)); //A function that returns the current time of the computer
    while (1) {
        check2 = 0; // check that both ran num are correct
        ra_num1 = rand()%26+1;
        ra_num2 = rand()%26+1;
        for (int i = 0; i < 6; i++) {
            if (ra_num1 == ra[i][0] && ra_num2 == ra[i][1])
            {
                check2 = 1;
                break;
            }
        }
        if (check2 == 1) {
            printf("The monkeys type %d letters.", count);
            break;
        }
        count += 2;
    }
    return 0;

/*
