#Q1 b)
#include <stdio.h>
int fib( int n ) {

    if (n<2)
        return n;
    else{
        return fib(n-1)+ fib(n-2);
    }
}
int main() {
    int inNum;
    printf("Enter a positive integer: ");
    scanf("%d", &inNum);
    printf("fib(%d) = %d\n", inNum, fib(inNum));
    return 0;
}
#Q2

#include <stdio.h>
#include <stdlib.h>
void drawLine(int n){
	if(n!=0)
	{
		printf("*");
		n--;
		return drawLine(n);
	}
}
int main()
 {
   drawLine(5);
   return 0;
 }

#Q3

#include <stdio.h>
#include <stdlib.h>
int count = 1;

void drawLine(int n){
	if(n!=0)
	{
		printf("*");
		n--;
		return drawLine(n);
	}
}

void drawtriangle(int n){
	if(count <= n){
		drawLine(count);
		printf("\n");
		count++;
		drawtriangle(n);
		}
	}
	
int main()
 {
   drawtriangle(5);
   return 0;
 }
 
